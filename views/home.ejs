<%- include('partials/header', { pageTitle: 'Home' }) %>

    <section class="hero">
        <h1>Thoughts on China, Education, Politics &amp; AI</h1>
        <p class="hero-sub"><em>by <a href="https://www.linkedin.com/in/james-p-ba7653207/" target="_blank"
                    rel="noopener" class="author-link">James Pares</a></em></p>
    </section>

    <% const topics=['china', 'education' , 'politics' , 'ai' ]; %>
        <% topics.forEach(function(t) { %>
            <% if (topicPreviews[t].length> 0) { %>
                <section class="topic-section">
                    <div class="section-header">
                        <h2>
                            <%= formatTopic(t) %>
                        </h2>
                        <a href="/topic/<%= t %>" class="view-all">View all â†’</a>
                    </div>
                    <div class="post-grid">
                        <% topicPreviews[t].forEach(function(post) { %>
                            <article class="post-card">
                                <span class="post-topic">
                                    <%= formatTopic(post.topic) %>
                                </span>
                                <h3><a href="/post/<%= post.slug %>">
                                        <%= post.title %>
                                    </a></h3>
                                <p class="post-excerpt">
                                    <%= post.excerpt || post.content.substring(0, 150) + '...' %>
                                </p>
                                <time class="post-date">
                                    <%= new Date(post.created_at).toLocaleDateString('en-GB', { day: 'numeric' ,
                                        month: 'long' , year: 'numeric' }) %>
                                </time>
                            </article>
                            <% }); %>
                    </div>
                </section>
                <% } %>
                    <% }); %>

                        <% if (recentPosts.length===0) { %>
                            <section class="empty-state">
                                <p>No posts yet. Check back soon!</p>
                            </section>
                            <% } %>

                                <%- include('partials/footer') %>